# Agent Brain Server Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env files with real API keys!

# ======================
# OPTIONAL API KEYS
# (Not required if using Ollama - see config.yaml for provider settings)
# ======================

# OpenAI API Key (for cloud embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (for cloud summarization)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ======================
# SERVER CONFIGURATION
# ======================

# API server host
API_HOST=127.0.0.1

# API server port
API_PORT=8000

# Debug mode (set to true for development)
DEBUG=false

# ======================
# AI MODEL CONFIGURATION
# ======================

# OpenAI embedding model
EMBEDDING_MODEL=text-embedding-3-large

# Embedding dimensions (must match model)
EMBEDDING_DIMENSIONS=3072

# Claude model for summarization
CLAUDE_MODEL=claude-haiku-4-5-20251001

# ======================
# CHUNKING CONFIGURATION
# ======================

# Default document chunk size (tokens)
DEFAULT_CHUNK_SIZE=512

# Chunk overlap (tokens)
DEFAULT_CHUNK_OVERLAP=50

# Maximum allowed chunk size
MAX_CHUNK_SIZE=2048

# Minimum allowed chunk size
MIN_CHUNK_SIZE=128

# ======================
# QUERY CONFIGURATION
# ======================

# Default number of results to return
DEFAULT_TOP_K=5

# Maximum results allowed
MAX_TOP_K=50

# Default similarity threshold (0.0-1.0)
DEFAULT_SIMILARITY_THRESHOLD=0.7

# ======================
# VECTOR STORE (ChromaDB)
# ======================

# ChromaDB persistence directory
CHROMA_PERSIST_DIR=./chroma_db

# Collection name for indexed documents
COLLECTION_NAME=agent_brain_collection

# ======================
# RATE LIMITING
# ======================

# Batch size for embedding requests
EMBEDDING_BATCH_SIZE=100
